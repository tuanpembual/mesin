description "Gunicorn application server handling django_hello"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid www-data
setgid www-data
chdir /srv/django_hello

env PYTHONPATH=/srv/django_hello:/srv/django_hello/hello/apps

exec /usr/bin/gunicorn --workers 3 --bind 192.168.1.200:8000 hello.wsgi:application